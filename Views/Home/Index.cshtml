@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>

    /* Banner */
    .banner {
        background-color: #404080;
        color: white;
        text-align: center;
        padding: 40px 20px;
    }

    /* Container */
    .container {
        background: white;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    /* Tiêu đề chính */
    h1, h2, h4 {
        color: #ff9000;
    }

    /* Tính năng */
    .feature {
        background: #ffffff;
        padding: 15px;
        border-left: 5px solid #ff9000;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
    }

    /* Danh sách */
    ul {
        list-style-type: none;
        padding: 0;
    }

        ul li {
            padding: 8px 0;
            font-weight: bold;
            color: #404080;
        }

    /* Footer */
    footer {
        background-color: #404080;
        color: white;
        text-align: center;
        padding: 10px;
        margin-top: 20px;
    }

    /* Nút */
    .btn-custom {
        background-color: #ff9000;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        transition: 0.3s;
    }

        .btn-custom:hover {
            background-color: #e07b00;
            color: white;
        }

</style>

